<h1>Log in</h1>

<%= simple_form_for(:session, url: users_path) do |f| %>
  <%= f.label :username, :input_html => {:value => "", :id => "Username"}, :label => "Username", :required => false %>
  <%= f.text_field :email, class: 'form-control' %>

  <%= f.label :password, :input_html => {:value => "", :id => "Password"}, :label => "Password", :required => false %>
  <%= f.password_field :password, class: 'form-control' %>

  <%= f.check_box :remember_me %>
  <%= f.label :remember_me, :input_html => {:value => "", :id => "Remember me"}, :label => "Remember me", :required => false %>

  <%= f.submit "Log in", class: "btn btn-info" %>
<% end %>
